#include <iostream>
#include <iomanip>
using namespace std;

float calcCelsius(float startF);
float calcFarenheit(float startC);

int main() {
    
    int choice;
    float start_temp, end_temp, temp_incr, result_temp;
    
    cout << "[1] Convert F to C " << endl;
    cout << "[2] Convert C to F " << endl;
    cout << "What is your choice? "; cin >> choice;
    
        // Converting Farenheit to Celsius
        if(choice == 1) {
            cout << "\nStarting Temeperature: "; cin >> start_temp;
            cout << "Ending Temperature: "; cin >> end_temp;
            cout << "Temperature Increase: "; cin >> temp_incr; cout << "\n";
            cout << setw(15) << "Farenheit" << setw(15) << "Celsius" << endl;
            cout << setw(15) << "---------" << setw(15) << "-------" << endl;
            
            for (float F = start_temp; F <= end_temp; F += temp_incr) {
                result_temp = calcCelsius(F);
                cout << fixed << setprecision(1) << setw(12) << F <<
                        fixed << setprecision(1) << setw(16) << result_temp << endl;
            }
        }
    
    
        // Convertint Celsius to Farenheit
        else if(choice == 2) {
            cout << "\nStarting Temeperature: "; cin >> start_temp;
            cout << "Ending Temperature: "; cin >> end_temp;
            cout << "Temperature Increase: "; cin >> temp_incr; cout << "\n";
            cout << setw(15) << "Celsius" << setw(15) << "Farenheit" << endl;
            cout << setw(15) << "-------" << setw(15) << "---------" << endl;
            
            for (float C = start_temp; C <= end_temp; C += temp_incr) {
                result_temp = calcFarenheit(C);
                cout << fixed << setprecision(1) << setw(13) << C <<
                        fixed << setprecision(1) << setw(16) << result_temp << endl;
            }
        }
    
        else
            cout << "Error. Please run the program again.\n";
}



float calcCelsius(float startF) {
    return (5.0 / 9.0) * (startF - 32.00);
}

float calcFarenheit(float startC) {
    return 9.0 / 5.0 * startC + 32.0;
}
